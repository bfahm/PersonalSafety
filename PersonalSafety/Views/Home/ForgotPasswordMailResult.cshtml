
@{
    ViewData["Title"] = "Forgot Password Mail Result";
}

<section class="pb_xl_py_cover pb_gradient_v1" style="padding:0px !important; background-image: url(assets/images/1900x1200_img_5.jpg);">
    <div class="container">
        <div class="row align-items-center justify-content-center">
            <div class="col-md-5 justify-content-center">

                @if (ViewBag.Result)
                {
                    <h2 class="heading mb-5 pb_font-40">Email Sent!</h2>
                    <div class="sub-heading">
                        <p class="mb-4">We sent you an email containing a password reset link. If this email is registered before you should recieve the link shortly. Tap the link and proceed from there.</p>
                    </div>
                }
                else
                {
                    <h2 class="heading mb-5 pb_font-40">Hmm.. Something went wrong.</h2>
                    <div class="sub-heading">
                        <p class="mb-4">It appears that something went wrong while trying to send the email. Please try again later.</p>
                    </div>
                }


            </div>
            <div class="col-md-1"></div>
        </div>
    </div>
</section>


