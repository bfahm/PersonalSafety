
@{
    ViewData["Title"] = "SendConfirmationMail";
}

    <section class="pb_xl_py_cover pb_gradient_v1" style="padding:0px !important; background-image: url(assets/images/1900x1200_img_5.jpg);">
        <div class="container">
            <div class="row align-items-center justify-content-center">
                <div class="col-md-5 justify-content-center">
                    <h2 class="heading mb-5 pb_font-40">Send Confirmation Link</h2>
                    <div class="sub-heading">
                        <p class="mb-4">Type in your email address to proceed with activating yor account. Make sure you registered with this email before.</p>
                    </div>
                </div>
                <div class="col-md-1"></div>
                <div class="col-md-5">
                    <form asp-controller="Home" asp-action="SendConfirmationMail" enctype="multipart/form-data" method="post" class="bg-white rounded pb_form_v1">
                        <h2 class="mb-4 mt-0 text-center">Request Email</h2>
                        <div asp-validation-summary="All" class="text-danger">
                            <div class="form-group">
                                <input name="email" type="text" class="form-control py-3 reverse" placeholder="Email" required>
                            </div>

                            @*<div class="form-group pb_height-60" style="visibility:hidden"></div>*@
                            <div class="form-group">
                                <input type="submit" class="btn btn-primary btn-lg btn-block pb_btn-pill  btn-shadow-blue" value="Confirm">
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>

