@model IEnumerable<PersonalSafety.Models.ViewModels.EmailPreviewVM.EmailPreviewViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <section class="pb_xl_py_cover pb_gradient_v1" style="padding:0px !important; background-image: url(assets/images/1900x1200_img_5.jpg);">
        <div class="container">
            <div class="row align-items-center justify-content-center">
                <div class="col-md-5 justify-content-center">
                    <h2 class="heading mb-5 pb_font-40">Emails Preview</h2>
                    <div class="sub-heading">
                        <p class="mb-4">This page contains all the types of emails that might get sent to the end user. All the following templates are shown in the same formating that will be sent out, and will be automatically updated without additional UI intervention.</p>
                    </div>
                </div>
                <div class="col-md-1"></div>
            </div>
        </div>
    </section>

    <section class="pb_section pb_slant-light">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 pl-md-5 pl-sm-0">

                    <div class="media d-block pb_feature-v1 text-left">
                        <div class="media-body">
                            @foreach (var item in Model)
                            {
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="pb_pricing_v1 p-5 border bg-white text-sans-serif">
                                            <p><b>@item.Type</b></p>
                                            <br />
                                            @Html.Raw(item.Body)
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
